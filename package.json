{
  "name": "cursor-pilot",
  "description": "An AI agent that drives Cursor CLI, detecting prompts and responding automatically using OpenAI.",
  "workspaces": ["packages/*"],
  "scripts": {
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "prepare": "husky",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "test": "npm run --workspaces --if-present test",
    "dev": "tsx packages/cli/src/index.ts",
    "dev:watch": "tsx watch packages/cli/src/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "tsx": "^4.19.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": ["biome format --write {files}", "biome check --apply {files}"]
  },
  "engines": {
    "node": ">=22.17.1",
    "npm": ">=10.9.2"
  }
}
