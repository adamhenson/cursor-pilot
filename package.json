{
  "name": "cursor-pilot",
  "description": "An AI agent that drives Cursor CLI, detecting prompts and responding automatically using OpenAI.",
  "workspaces": ["packages/*"],
  "scripts": {
    "biome:check": "biome check .",
    "biome:format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": ["biome format --write {files}", "biome check --apply {files}"]
  },
  "engines": {
    "node": ">=22.17.1",
    "npm": ">=10.9.2"
  }
}